{
    "fileTypes":["sqf"],
    "name":"sqf",
    "arrayLiteral":{
        "name":"meta.array.literal.sqf",
        "begin":"\\[",
        "beginCaptures":{"0":{"name":"meta.brace.square.sqf"}},"end":"\\]",
        "endCaptures":{"0":{"name":"meta.brace.square.sqf"}}
    },
    "assignmentOperator":{
        "match":"=",
        "name":"keyword.operator.assignment.sqf"
    },
    "comparisonOperator":{
        "match":"==|!=|>|<|greater|greater=|less|less=|not",
        "name":"keyword.operator.comparison.sqf"
    },
    "conditionOperator":{
        "match":"!|&&|\\|\\||:|([^A-Za-z0-9]|\\b)and([^A-Za-z0-9]|\\b)|([^A-Za-z0-9])or([^A-Za-z0-9])",
        "name":"keyword.operator.condition.sqf"
    },
    "mathematicalOperator":{
        "match":"\\*|/|\\-|\\+|%|\\^|plus|\\%",
        "name":"keyword.operator.mathematical.sqf"
    },
    "numericLiteral":{
        "match":"\\s*(?<=[^$])((0(x|X)[0-9a-fA-F]+)|([0-9]+(\\.[0-9]+)?))\\b",
        "name":"constant.numeric.sqf"
    },
    "reservedLiteral":{
        "match":"\\s*(?i)(this|_this|_x|_forEachIndex|_exception|_thisScript|_thisFSM|thisList|thisTrigger)\\b",
        "name":"variable.language.reserved.sqf"
    },
    "propertyAccessor":{
        "match":"\\s*(?i)(get|set|select)\\b",
        "name":"storage.type.property.sqf"
    },
    "stringDoubleLiteral":{
        "begin":"\"",
        "end":"\"",
        "name":"string.double.sqf"
    },
    "stringSingleLiteral":{
        "begin":"'",
        "end":"'",
        "name":"string.single.sqf"
    }
}